{
  "name": "events",
  "version": "1.0.0",
  "description": "remote schema and event trigger service",
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "hasura-node-types": "^0.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@types/supertest": "^2.0.10",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-import-resolver-typescript": "^2.2.1",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.4.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "build": "npm run clean && npm run lint && tsc",
    "test": "NODE_ENV=test jest --bail --runInBand",
    "clean": "rm -rf lib && rm -rf .nyc_output && rm -rf coverage",
    "start": "node lib/index.js",
    "dev": "npm run build && npm start",
    "lint": "eslint --ext .js,.ts src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hgiasac/hasura-typescript-boilerplate.git"
  },
  "keywords": [
    "hasura",
    "typescript",
    "boilerplate"
  ],
  "author": "Toan Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hgiasac/hasura-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/hgiasac/hasura-typescript-boilerplate#readme",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "bail": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "common.ts"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run lint && ts-node src/index.ts",
    "watch": [
      "src/**/*.ts"
    ],
    "ignore": [
      "docs/*",
      ".git"
    ],
    "ext": "ts,json",
    "delay": "1000"
  }
}
